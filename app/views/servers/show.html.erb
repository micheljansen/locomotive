<p>
  <b>Name:</b>
  <%=h @server.name %>
</p>

<p>
  <b>Hostname:</b>
  <%=h @server.hostname %>
</p>

<p>
  <b>Roles:</b>
    <ul>
      <% @server.roles.each do |role| %>
        <li><%=h role.name %></li>
      <% end %>
    </ul>
    
</p>

<%= link_to 'Back to server list', resource(:servers) %>

<% throw_content(:sidebar) do %>

  <h2>Actions</h2>

  <ul id="specific">
    <li><%= link_to 'Edit this server', resource(@server, :edit) %></li>
    <li><%= link_to 'Assign a role', resource(@server, :purposes, :new) %></li>
  </ul>
  <ul id="general">
    <li><%= link_to 'New server', resource(:servers, :new) %></li>
  </ul>
  
  <% if @server.others.size > 0 %>
    <h2>More servers</h2>
  
    <ul>
    <% @server.others.each do |server| %>
      <li><%= link_to server.name, server %></li>
    <% end %>
    <li><%= link_to "See all...", resource(:servers) %></li>
    </ul>
  <% end %>
  
<% end %>
