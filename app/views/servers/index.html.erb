<h1>Listing servers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Hostname</th>
    <th>Roles</th>
  </tr>

<% for server in @servers %>
  <tr>
    <td><%=h server.name %></td>
    <td><%=h server.hostname %></td>
    <td><%=h server.roles.map {|r| r.name} * "," %></td>
    <td><%= link_to 'Show', resource(server) %></td>
    <td><%= link_to 'Edit', resource(server, :edit) %></td>
    <td><%= link_to 'Destroy', resource(server, :delete), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% throw_content(:sidebar) do %>

  <h2>Actions</h2>

  <ul id="general">
    <li><%= link_to 'New server', resource(:servers, :new) %></li>
  </ul>
  
<% end %>
