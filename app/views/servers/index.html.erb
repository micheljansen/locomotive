<h1>Listing servers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Hostname</th>
    <th>Roles</th>
  </tr>

<% for server in @servers %>
  <tr>
    <td><%=h server.name %></td>
    <td><%=h server.hostname %></td>
    <td><%=h server.roles.map {|r| r.name} * "," %></td>
    <td><%= link_to 'Show', server_path(server.id) %></td>
    <td><%= link_to 'Edit', edit_server_path(server.id) %></td>
    <td><%= link_to 'Destroy', server_path(server.id), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% content_for(:sidebar) do %>

  <h2>Actions</h2>

  <ul id="general">
    <li><%= link_to 'New server', new_server_path %></li>
  </ul>
  
<% end %>