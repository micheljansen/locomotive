<h1><%= link_to @release.service.name, resource(@release.service) %> release <%=h @release.name %></h1>
<div id="actions">
  <span>
    <%= link_to 'Edit', resource(@release.service, :edit) %>
  </span>
</div>

  
<% throw_content :sidebar do %>

  <h2>Actions</h2>
  <ul>
    <li><%= link_to 'Edit this release', resource(@release.service, :edit) %></li>
    <li><%= link_to "Delete this release", resource(@release.service, :delete), :method => :delete %></li>
  </ul>
  <ul>
    <li><%= link_to "Add a release", resource(:service_releases, :new, @release.service.id) %></li>
  </ul>
  
  <h2>Other releases</h2>
  <ul>
    <% @release.service.releases.each do |other_release| %>
      <li> <%= link_to other_release.name, :controller => "releases", :action => "show", :id => other_release.id %> </li>
    <% end %>
  </ul>
  
<% end %>:
