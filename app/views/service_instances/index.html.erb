<h1><%=h title %></h1>

<table>
  <tr>
    <th>Client</th>
    <th>Service</th>
    <th>Release</th>
    <th>Platform</th>
  </tr>

<% for si in @service_instances %>
  <tr>
    <td><%= link_to si.client.name, si.client.id %></td>
    <td><%= link_to si.release.service.name, si.release.service.id %></td>
    <td><%= link_to si.release.name, resource(si.release.service, :edit, si.release.id) %></td>
    <td><%= link_to si.platform.name, resource(si.platform) %></td>
    <td><%= link_to 'Show', resource(si) %></td>
    <td><%= link_to 'Edit', resource(si, :edit) %></td>
    <td><%= link_to 'Destroy', resource(si, :delete), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

