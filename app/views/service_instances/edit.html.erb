<h2>Editing <%= "#{@service_instance.release.full_name} for #{@service_instance.client.name}" %></h2>

<%= form_for(@service_instance, :action => resource(@service_instance)) do %>
  <%= error_messages %>

  <p>
    <p><b>Release:</b>
    <%#= link_to @service_instance.release.name, service_release_path(@service_instance.release.service, @service_instance.release) %>
    <%= select :release_id, @service_instance.service.releases, :id, :full_name %>
    </p>
    <p><b>Platform:</b>
    <%= link_to @service_instance.platform.name, resource(@service_instance.platform) %>
    </p>
    <%= submit "Update" %>
  </p>
<% end =%>

<%= link_to 'Show', resource(@service_instance) %> |
<%= link_to 'Back', resource(:service_instances) %>
