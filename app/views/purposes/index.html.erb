<h1>Listing purposes for <%= @server.name %></h1>

<table>
<% for purpose in @purposes %>
  <tr>
    <td><%=h purpose.role.name %></td>
    <td><%= link_to 'x', server_purpose_path(@server, purpose), 
            :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

