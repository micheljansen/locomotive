<h1>Add a role to server <%= @server.name %></h1>

<%= form_for(@purpose, :action => resource(@server, :purposes)) do %>
  <%= error_messages %>
  
  <%= hidden_field :server_id %>
  <p>
    <%= label :role_id %><br />
    <%= select :role_id, Role.all, :id, :name %>
  </p>
  <p>
    <%= submit "Create" %>
  </p>
<% end =%>

<%= link_to 'Back to server '+@server.name, resource(@server) %>
